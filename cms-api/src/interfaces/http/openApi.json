{
  "openapi": "3.0.0",
  "info": {
    "title": "KAPP CMS API",
    "version": "v1"
  },
  "servers": [
    {
      "description": "rest-temporary",
      "url": "https://qp3fgsp42g.execute-api.ap-southeast-1.amazonaws.com/rest/api"
    },
    {
      "description": "dev",
      "url": "https://sztg7uncla.execute-api.ap-southeast-1.amazonaws.com/dev/api"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "operationId": "ListPosts",
        "tags": [ "Posts" ],
        "parameters": [
          {
            "name": "draft",
            "in": "query",
            "description": "draft filter by where",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "where[draft]": true
                  }]
                }
              }
            }
          },
          {
            "name": "published",
            "in": "query",
            "description": "post published filter by where",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "where[published]": true
                  }]
                }
              }
            }
          },
          {
            "name": "scheduled",
            "in": "query",
            "description": "post scheduled filter by where",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "where[scheduled]": true
                  }]
                }
              }
            }
          },
          {
            "name": "location",
            "in": "query",
            "description": "location filter by where",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "where[location]": "Quezon City"
                  }]
                }
              }
            }
          },
          {
            "name": "date",
            "in": "query",
            "description": "post date filter by where",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "where[date]": "2019-10-31 03:00:57"
                  }]
                }
              }
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "post category filter by where",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "where[category]": "Jobs"
                  }]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of all posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          },
          "500": {
            "description": "List of all posts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createPostDraft",
        "tags": [ "Posts" ],
        "requestBody": {
          "description": "Creates a draft of a post",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostDraft"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post draft has started",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostDraft"
                }
              }
            }
          },
          "400": {
            "description": "Not created because of validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "operationId": "showPost",
        "tags": [ "Posts" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of post to show",
            "required": true,
            "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
          }
        ],
        "responses": {
          "200": {
            "description": "Return post with given id",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Item not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundError"
                }
              }
            }
          }
        }
      },
      "put": {
        "operationId": "savePost",
        "tags": [ "Posts" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of post to update",
            "required": true,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        ],
        "requestBody": {
          "description": "Post Draft new data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Post"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Post Draft updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref":"#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Post not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundError"
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}/publish": {
      "post": {
        "operationId": "PublishPost",
        "tags": [ "Posts" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of post to publish",
            "required": true,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        ],
        "requestBody": {
          "description": "Post Draft new data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Post"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Post Draft updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref":"#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Post not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique Identifier representing a user",
            "x-primary-key": true
          },
          "firstName": {
            "type": "string"
          },
          "middleName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          }
        }
      },   
      "Post": {
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique Identifier representing a post",
            "x-primary-key": true
          },
          "userId": {
            "type": "integer",
            "format": "int32",
            "description": "Identifier representing an author"
          },
          "categoryId": {
            "type": "string"
          },
          "subCategory": {
            "type": "string"
          },
          "postId": {  
             "type": "string",
            "format": "int32",
            "description": "Unique Identifier representing a post",
            "x-primary-key": true
          },
          "title": {
            "type": "string"
          },  
          "content": {
            "type": "string"
          },  
           "priorityLevel": {
            "type": "string"
          },"source": {
            "type": "string"
          },"locationAddress": {
            "type": "string"
          },"locationDetails": {
            "type": "object"
          },"tagsOriginal": {
            "type": "object"
          },"tagsRetained": {
            "type": "object"
          },"tagsAdded": {
            "type": "object"
          },"tagsRemoved": {
            "type": "object"
          },"advisories": {
            "type": "object"
          },"attachments": {
            "type": "object"
          },"draft": {
            "type": "object"
          },"scheduledAt": {
            "type": "string"
          },"expiredAt": {
            "type": "string"
          },"publishedAt": {
            "type": "string"
          }
        }
      },
      "PostDraft": {
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique Identifier representing a draft of post",
            "x-primary-key": true,
            "default": 1
          }
        }
      },
    "ValidationError": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "ValidationError" ]
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/ValidationErrorDetail"
          }
        }
      }
    },
    "ValidationErrorDetail": {
      "properties": {
        "message": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      }
    },
    "NotFoundError": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "NotFoundError" ]
        },
        "message": {
          "type": "string",
          "enum": [ "Not found message" ]
        }
      }
    }, 
    "IntenalServerError": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "NotFoundError" ]
        },
        "message": {
          "type": "string",
          "enum": [ "Not found message" ]
        }
      }
    }
    }
  }
}