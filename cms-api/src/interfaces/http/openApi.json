            "description": "filter post status",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "status": "for-approval"
                  },
                  {
                    "status": "for-revision"
                  },
                  {
                    "status": "published"
                  },
                  {
                    "status": "scheduled"
                  },
                  {
                    "status": "draft"
                  }]
                }
              }
            }
          },
          {
            "name": "location",
            "in": "query",
            "description": "filter location",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "location": "Quezon City"
                  }]
                }
              }
            }
          },
          {
            "name": "date",
            "in": "query",
            "description": "filter post based filtered tab",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "date": "2019-10-31 03:00:57"
                  }]
                }
              }
            }
          },
          {
            "name": "category",
            "in": "query",
            "description": "filter post category",
            "required": false,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  },
                  "example": [{
                    "category": "Jobs"
                  }]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of all posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          },
          "500": {
            "description": "List of all posts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
