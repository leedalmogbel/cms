{
  "openapi": "3.0.0",
  "info": {
    "title": "KAPP CMS API",
    "version": "v1"
  },
  "servers": [
    {
      "description": "rest-temporary",
      "url": "https://qp3fgsp42g.execute-api.ap-southeast-1.amazonaws.com/rest/api"
    },
    {
      "description": "dev",
      "url": "https://sztg7uncla.execute-api.ap-southeast-1.amazonaws.com/dev/api"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "operationId": "ListPosts",
        "tags": [ "Posts" ],
        "responses": {
          "200": {
            "description": "List of all posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          },
          "500": {
            "description": "List of all posts",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createPostDraft",
        "tags": [ "Posts" ],
        "requestBody": {
          "description": "Creates a draft of a post",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostDraft"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post draft has started",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PostDraft"
                }
              }
            }
          },
          "400": {
            "description": "Not created because of validation error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": '#/components/schemas/ValidationError'
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "operationId": "showPost",
        "tags": [ "Posts" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of post to show",
            "required": true,
            "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
          }
        ],
        "responses": {
          "200": {
            "description": "Return post with given id",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Item not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": '#/components/schemas/NotFoundError'
                }
              }
            }
          }
        }
      },
      "put": {
        "operationId": "savePost",
        "tags": [ "Posts" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of post to update",
            "required": true,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        ],
        "requestBody": {
          "description": "Post Draft new data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": '#/components/schemas/Post'
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Post Draft updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref":'#/components/schemas/Post'
                }
              }
            }
          },
          "404": {
            "description": "Post not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundError"
                }
              }
            }
          }
        }
      },
    },
    "/posts/{id}/publish": {
      "post": {
        "operationId": "PublishPost",
        "tags": [ "Posts" ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of post to publish",
            "required": true,
              "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                }
              }
            }
          }
        ],
        "requestBody": {
          "description": "Post Draft new data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": '#/components/schemas/Post'
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Post Draft updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref":'#/components/schemas/Post'
                }
              }
            }
          },
          "404": {
            "description": "Post not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundError"
                }
              }
            }
          }
        }
      },
    }
  },
  "components": {
    "schemas": {
      "User": {
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique Identifier representing a user",
            "x-primary-key": true
          },
          "firstName": {
            "type": "string"
          },
          "middleName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          }
        }
      },   
      "Post": {
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique Identifier representing a post",
            "x-primary-key": true
          },
          "userId": {
            "type": "integer",
            "format": "int32",
            "description": "Identifier representing an author"
          },
          "categoryId": {
            "type": "string"
          },
          "subCategory": {
            "type": "string"
          },
          "postId": {  
             "type": "string",
            "format": "int32",
            "description": "Unique Identifier representing a post",
            "x-primary-key": true
          },
          "title": {
            "type": "string"
          },  
          "content": {
            "type": "string"
          },  
           "priorityLevel": {
            "type": "string"
          },"source": {
            "type": "string"
          },"locationAddress": {
            "type": "string"
          },"locationDetails": {
            "type": "object"
          },"advisories": {
            "type": "object"
          },"attachments": {
            "type": "object"
          },"draft": {
            "type": "object"
          },"scheduledAt": {
            "type": "string"
          },"expiredAt": {
            "type": "string"
          },"publishedAt": {
            "type": "string"
          }
        }
      },
      "PostDraft": {
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique Identifier representing a draft of post",
            "x-primary-key": true,
            "default": 1
          },
        }
      },
    "ValidationError": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "ValidationError" ]
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/ValidationErrorDetail"
          }
        }
      }
    },
    "ValidationErrorDetail": {
      "properties": {
        "message": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      }
    },
    "NotFoundError": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "NotFoundError" ]
        },
        "message": {
          "type": "string",
          "enum": [ "Not found message" ]
        }
      }
    }, 
    "IntenalServerError": {
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "NotFoundError" ]
        },
        "message": {
          "type": "string",
          "enum": [ "Not found message" ]
        }
      }
    }
    }
  }
}